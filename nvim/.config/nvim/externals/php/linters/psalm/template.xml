<?xml version="1.0"?>
<psalm
    errorLevel="0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:noNamespaceSchemaLocation="https://getpsalm.org/schema/config.xsd"
>
    <!-- Psalm Template Ruleset -->
    <!-- Minimal static checks for PHP template files. -->

    <projectFiles>
        <directory>resources/views</directory>
        <directory>templates</directory>
    </projectFiles>

    <ignoreFiles><directory>vendor</directory></ignoreFiles>
    <ignoreFiles><directory>storage</directory></ignoreFiles>
    <ignoreFiles><directory>node_modules</directory></ignoreFiles>
</psalm>
