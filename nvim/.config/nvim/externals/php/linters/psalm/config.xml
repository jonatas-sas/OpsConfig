<?xml version="1.0"?>
<psalm
    errorLevel="1"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:noNamespaceSchemaLocation="https://getpsalm.org/schema/config.xsd"
>
    <!-- Psalm Config File Ruleset -->
    <!-- Relaxed settings for analyzing PHP configuration files. -->

    <projectFiles>
        <directory>config</directory>
    </projectFiles>

    <ignoreFiles><directory>vendor</directory></ignoreFiles>
    <ignoreFiles><directory>storage</directory></ignoreFiles>
    <ignoreFiles><directory>node_modules</directory></ignoreFiles>
</psalm>
