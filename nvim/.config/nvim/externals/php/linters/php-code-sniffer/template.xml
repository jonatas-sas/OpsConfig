<?xml version="1.0"?>
<ruleset name="PHP Template Files">
    <description>Minimalist ruleset for PHP files used as templates or views. Skips namespace and PHPDoc requirements.</description>

    <file>./</file>
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>

    <rule ref="PSR12"/>
    <exclude name="Squiz.Commenting.FunctionComment"/>
    <exclude name="Squiz.Commenting.FileComment"/>
    <exclude name="Generic.Files.OneClassPerFile"/>
    <exclude name="Squiz.Classes.ClassFileName"/>
</ruleset>

